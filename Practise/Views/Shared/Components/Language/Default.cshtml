@model LanguageViewModel
@{
    var languages = Model.Languages;
    var selectedLanguage = Model.SelectedLanguage;
}

<button type="button" id="langue" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><img src="~/assets/images/flag/@selectedLanguage.ImageUrl" alt=""> @selectedLanguage.Name <i class="icon ion-chevron-down"></i></button>

<ul class="dropdown-menu" aria-labelledby="langue">
    @foreach (var item in languages)
    {
        <li><a asp-controller="languages" asp-action="ChangeLangugage" asp-route-culture="@item.IsoCode"><img src="~/assets/images/flag/@item.ImageUrl" alt=""> @item.Name</a></li>
    }
</ul>